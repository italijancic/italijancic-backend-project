<h1>Restore Password</h1>

<form action="{{configs.backUrl}}/api/users/restorePassword" method="post">

  <div>
    <label for="email">Email:</label>
    <br>
    <input name="email" id="email" type="text" placeholder="user@email.com">
  </div>
    <br>
  <div>
    <label for="password">Password:</label>
    <br>
    <input name="password" id="password" type="password" placeholder="">
  </div>
  <br>
  <div>
    <button id="register">Restore</button>
  </div>
</form>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script> const backUrl = "{{configs.backUrl}}" </script>
<script src="/js/restorePassword.js"></script>
