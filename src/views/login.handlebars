<h1>Login</h1>

<form action="{{configs.backUrl}}/api/passportLocal/login" method="post">
  <div>
    <label for="email">Email:</label>
    <br>
    <input name="email" id="email" type="text" placeholder="user@email.com">
  </div>
  <br>
  <div>
    <label for="password">Password:</label>
    <br>
    <input name="password" id="password" type="password" placeholder="">
  </div>
  <br>
  <div>
    <button id="login">Login</button>
  </div>
  <br>
  <div>
    <a href="{{configs.backUrl}}/register">Create User</a>
  </div>
  <br>
  <div>
    <button id="restorePassword">Restore Password</button>
  </div>
</form>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script> const backUrl = "{{configs.backUrl}}" </script>
<script src="/js/login.js"></script>
